# Configuración de API y WebSocket
API_URL=http://localhost:3000
WS_URL=ws://localhost:3000/ws

# Configuración de Autenticación
AUTH_TOKEN_KEY=iot_auth_token

# Configuración de la Aplicación
APP_TITLE=IoTmatic-Tec
APP_DESCRIPTION=Sistema de Monitoreo IoT

# Configuración de Tema
DEFAULT_THEME=light
PRIMARY_COLOR=#1976D2
SECONDARY_COLOR=#26A69A

# Configuración de Internacionalización
DEFAULT_LOCALE=es

# Configuración de Analytics (opcional)
# ANALYTICS_ID=UA-XXXXX-Y

# Configuración de Características
ENABLE_NOTIFICATIONS=true
ENABLE_OFFLINE_MODE=true

# Configuración de Cache
CACHE_LIFETIME=3600
MAX_CACHE_SIZE=50

# Configuración de Logging
LOG_LEVEL=info

# Configuración de Desarrollo
DEBUG_MODE=false
SHOW_VERBOSE_ERRORS=true